set(SPROKIT_CMAKE_DIR          "${SPROKIT_LIBRARY_DIR}/cmake/sprokit")

set(SPROKIT_PIPE_INSTALL_PATH  "@CMAKE_INSTALL_PREFIX@/share/sprokit/pipelines")
